<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    tools:context=".InsertNotes"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/notesTitle"
            android:hint="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edit_text_bg"
            android:padding="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            ></EditText>
        <EditText
            android:id="@+id/notesSubTitle"
            android:hint="Subtitle..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="15dp"
            android:background="@drawable/edit_text_bg"
            android:layout_marginBottom="16dp"
            ></EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Priority : "
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/lowPrio"
                android:src="@drawable/done_prio"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/low_priority"

                ></ImageView>
            <ImageView
                android:id="@+id/midPrio"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:layout_marginRight="8dp"
                android:background="@drawable/mid_priority"

                ></ImageView>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/highPrio"
                android:layout_marginRight="8dp"
                android:background="@drawable/high_priority"

                ></ImageView>
        </LinearLayout>
        <EditText
            android:id="@+id/notesDescription"
            android:hint="Note..."
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="15dp"
            android:gravity="start"
            android:background="@drawable/edit_text_bg"
            android:layout_marginBottom="16dp"
            ></EditText>

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/updateNotesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="26dp"
        android:src="@drawable/update_png"
        android:theme="@style/ProgressBar"></com.google.android.material.floatingactionbutton.FloatingActionButton>


</RelativeLayout>